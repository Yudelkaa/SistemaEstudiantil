@page "/Calificacion"


<div class="container">
    <header>
        <h1>Universidad X - Portal De Profesores</h1>
        <div class="profile">
            <span>Juan Pérez</span>
        </div>
    </header>

    <div class="content">
        <h2>Descripción General Del Profesor</h2>
        <h3>Calificaciones Programación:</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Calificación</th>
                    <th>Estado</th>
                    <th>Publicar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var calificacion in calificaciones)
                {
                    <tr>
                        <td>@calificacion.Nombre</td>
                        <td>@calificacion.Nota?.ToString() ?? "-"</td>
                        <td>@calificacion.Estado</td>
                        <td><button @onclick="() => Publicar(calificacion)">✏️</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

