@page "/Perfil"
<div class="personal-info-container">
    <div class="sidebar">
        <div class="profile-icon">
            <img src="Perfil.jpg" alt="Profile Icon" />
        </div>
        <p><strong class="text-primero">Matrícula</strong></p>
        <p class="text-segundo">@student.Matricula</p>
        <p><strong class="text-primero">Carrera</strong></p>
        <p class="text-tercero">@student.Carrera</p>
        <p><strong class="text-primero">Semestre Actual</strong></p>
        <p class="text-tercero">@student.SemestreActual</p>
        <p><strong class="text-primero">Índice Acumulado</strong></p>
        <p class="text-tercero">@student.IndiceAcumulado</p>
        <a class="btn btn-primary" href="/" role="button">Editar</a>
    </div>
    <div class="main-content">
        <div class="header">
            <h2>Información Personal</h2>
            <a class="btn btn-primary" href="/" role="button">Atras</a>
        </div>
        <div class="info-content">
            <div class="info-row">
                <p><strong class="text-primero">Nombre: </strong>@student.Nombre</p>
                <p><strong class="text-primero">Apellido: </strong>@student.Apellido</p>
            </div>
            <div class="info-row">
                <p><strong class="text-primero">Fecha de Nacimiento: </strong>@student.FechaNacimiento</p>
            </div>
            <div class="info-row">
                <p><strong class="text-primero">Correo Personal: </strong>@student.CorreoPersonal</p>
                <p><strong class="text-primero">Correo Institucional: </strong>@student.CorreoInstitucional</p>
            </div>
            <div class="info-row">
                <p><strong class="text-primero">Teléfono: </strong>@student.Telefono</p>
                <p><strong class="text-primero">Celular: </strong>@student.Celular</p>
            </div>
            <div class="info-row">
                <p><strong class="text-primero">Dirección: </strong>@student.Direccion</p>
            </div>
        </div>
    </div>
</div>


